<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-6">
     <h1>New task</h1>
      <%= form_for(@task) do |f| %>
          <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :details %>
            <%= f.text_field :details, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.check_box :completed, class: 'form-check-label' %>
            <%= f.label :completed %>
          </div>

          <%= f.submit class: 'btn btn-primary' %>
      <% end %>
      <hr>
      <%= link_to tasks_path do %>
        <i class="fa fa-undo"></i> <span>Back to list</span>
      <% end %>    </div>
  </div>
</div>


